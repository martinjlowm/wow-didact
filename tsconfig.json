{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@/*": ["src/*"],
      "$/*": ["test/*"]
    },
    "types": ["lua-types/jit", "wow-classic-declarations"]
  },
  "tstl": {
    "luaTarget": "5.3",
    "luaLibImport": "none",
    "noHeader": true
  },
  "noResolve": false
}
